<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/principalAd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/isync"
    android:orientation="vertical" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="2" >

        <Button
            android:id="@+id/buttonmapa"
            style="@drawable/shape"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_marginTop="50dp"
            android:layout_row="0"
            android:background="@drawable/iconomapa"
            android:minEms="5"
            android:text="@string/BotonMapa"
            android:textColor="#3366CC"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonservicios"
            android:layout_column="1"
            android:layout_gravity="right"
            android:layout_marginTop="50dp"
            android:layout_row="0"
            android:background="@drawable/iconoservicios"
            android:text="Servicios"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <Button
            android:id="@+id/buttonRuta"
            android:layout_column="0"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="50dp"
            android:layout_row="1"
            android:background="@drawable/iconoruta"
            android:lines="1"
            android:text="Nueva ruta"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <Button
            android:id="@+id/buttonLista"
            style="@drawable/shape"
            android:layout_column="1"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="50dp"
            android:layout_row="1"
            android:background="@drawable/favoritos"
            android:maxEms="6"
            android:text="Favoritos"
            android:textColor="#3366CC"
            android:textSize="22sp"
            android:textStyle="bold" />
        
    </GridLayout>
</LinearLayout>
